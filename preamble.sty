% Formatting for sub-table title
% Argument 1: number of columns for multicolumn
% Argument 2: subtable title
\newcommand{\unclassedsubtabletitle}[2]{
    \unclassedblankrowcolor
    \multicolumn{#1}{l}{
        \Gape[6pt][0pt]{
            \textbf{\textit{#2}}
        }
    }
}

