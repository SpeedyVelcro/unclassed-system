% Statblocks
% vspace found above and below rules
\newcommand{\statblockrulespace}{\vspace{4pt}}
% Stat block horizontal rule separator
\newcommand{\statblockrule}{\hrule}

% Statblock header (name and level)
% Parameter 1: Name
% Parameter 2: Level
\newcommand{\statblockhead}[2]
{
    \vspace{6pt}

    % No first-line indentation in the stat block
    \setlength{\parindent}{0pt}

    % Title / Level
    {\normalfont\huge\bfseries #1}
    \hfill
    \begin{varwidth}{.9\linewidth}
        \raggedleft
        \normalfont\small\bfseries
        \sisetup{
            mode=text,
            group-separator={,},
            reset-text-family=false,
            reset-text-series=false,
            reset-text-shape=false
        }
        Level \num{#2} \\
        \sisetup{
            mode=text,
            group-separator={,},
            reset-text-family=false,
            reset-text-series=false,
            reset-text-shape=false,
            evaluate-expression
        }
        \num{#2 * 60} XP
    \end{varwidth}

    \statblockrulespace
    \statblockrule
}
% Stat block stats section
% Parameter 1: Atributes, left col
% Parameter 2: Attributes, right col
% Parameter 3: Basic stats (health, speed, level, species, type, background)
\newcommand{\statblockstats}[3]
{
    \statblockrulespace

    % Attributes
    \begin{minipage}{.45\linewidth}#1\end{minipage}
    \hfill
    \begin{minipage}{.45\linewidth}#2\end{minipage}
    
    \vspace{4pt}

    #3

    \statblockrulespace
    \statblockrule
}

% Stat block skills, feats, & features section
% Parameter 1: Skills
% Parameter 2: Feats and features
\newcommand{\statblockskillsfeats}[2]
{
    \statblockrulespace

    \begin{multicols}{2}
        #1
    \end{multicols}

    #2

    \statblockrulespace
    \statblockrule
}

% Stat block section
% Parameter 1: Section contents
\newcommand{\statblocksec}[1]
{
    \statblockrulespace

    #1

    \statblockrulespace
    \statblockrule
}

% Stat block foot. Use after end of stat block. At the moment, literally just
